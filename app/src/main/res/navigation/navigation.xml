<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/title_page">
    <fragment
        android:id="@+id/title_page"
        android:name="buu.informatics.s59160625.aunzcoffee.screens.title.TitlePage"
        android:label="AuNzCoffee"
        tools:layout="@layout/fragment_title_page">
        <action
            android:id="@+id/action_title_page_to_coffeeList_page"
            app:destination="@id/coffeeList_page" />
    </fragment>
    <fragment
        android:id="@+id/coffeeList_page"
        android:name="buu.informatics.s59160625.aunzcoffee.screens.coffeeList.CoffeeListPage"
        android:label="เลือกประเภท"
        tools:layout="@layout/fragment_coffee_list_page">
        <action
            android:id="@+id/action_coffeeList_page_to_coffeeIngrediant_page"
            app:destination="@id/coffeeIngrediant_page" />
        <argument
            android:name="numBtn"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/coffeeIngrediant_page"
        android:name="buu.informatics.s59160625.aunzcoffee.screens.coffeeIngrediant.CoffeeIngredientFragment"
        android:label="รายละเอียดการชง"
        tools:layout="@layout/fragment_coffee_ingrediant_page">
        <argument
            android:name="coffeeName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/about_page"
        android:name="buu.informatics.s59160625.aunzcoffee.screens.about.AboutPage"
        android:label="About"
        tools:layout="@layout/fragment_about_page" />
    <fragment
        android:id="@+id/testRecycleView"
        android:name="buu.informatics.s59160625.aunzcoffee.testRecycleView.TestRecycleView"
        android:label="RecycleView"
        tools:layout="@layout/fragment_test_recycle_view" />
</navigation>